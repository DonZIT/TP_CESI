{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<section class="container">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<form method="post" class="mt-5">
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}

					

					<h2 class="mb-4">Hey content de vous revoir !</h2>
					<div class="form-group">
						<label for="inputEmail">Adresse Email</label>
						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
					</div>
					<div class="form-group">
						<label for="inputPassword">Mot de passe</label>
						<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
					</div>
					<div class="mt-3">
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
						<button class="btn btn-primary btn-block" type="submit">Se connecter</button>
						<a href="{{path('connexion_register')}}">J'ai déjà un compte</a>
					</div>
				</form>
			</div>
			<div class="col-md-6 mt-5">
				<h2>Comptes de Démo</h2>
				<ul>
					<li>Admin : admin@example.com / adminpass</li>
					<li>Utilisateur : user@example.com / userpass</li>
					<li>Fournisseur : supplier@example.com / supplierpass</li>
				</ul>
			</div>
		</div>
	</section>
{% endblock %}
